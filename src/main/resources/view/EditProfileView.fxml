<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Edit Profile" />
        <TextField fx:id="firstName" promptText="First Name" />
        <TextField fx:id="lastName" promptText="Last Name" />
        <PasswordField fx:id="password" promptText="Password" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="saveButton" text="Save" />
                <Button fx:id="cancelButton" text="Cancel" />
            </children>
        </HBox>
        <Label fx:id="status" />
    </children>
</VBox>

